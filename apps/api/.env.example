# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=postgres

# Application Configuration
NODE_ENV=development
PORT=4000
CORS_ORIGINS=http://localhost:4001,http://localhost:4002

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars-long-for-security
BETTER_AUTH_URL=http://localhost:4000

# Microsoft OAuth (optional - for SSO)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Email Configuration (optional - for password reset emails)
# Sign up for free at https://resend.com to get an API key
# Without these, password reset links will be logged to console
RESEND_API_KEY=
EMAIL_FROM=noreply@yourdomain.com

# Frontend URLs
STAFF_APP_URL=http://localhost:4001
SCHOLAR_APP_URL=http://localhost:4002

# S3 Configuration (for file uploads)
# For local development, you can use the test environment bucket
# Make sure you have AWS credentials configured locally
# In production, these are set via environment variables
S3_BUCKET_NAME=ashinaga-scholar-data-test
AWS_REGION=eu-west-3