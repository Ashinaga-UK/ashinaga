{
  "name": "ashinaga-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "docker": "docker compose up -d",
    "migrate": "pnpm docker && pnpm db:migrate",
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:coverage": "jest --coverage && node scripts/update-coverage-title.js",
    "test:coverage:open": "jest --coverage && node scripts/update-coverage-title.js && open coverage/lcov-report/index.html",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:reset": "ts-node -r tsconfig-paths/register src/db/reset.ts",
    "db:populate-dev": "ts-node -r tsconfig-paths/register src/db/dev-data.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.888.0",
    "@aws-sdk/s3-request-presigner": "^3.888.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/static": "^8.0.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-fastify": "^11.1.3",
    "@nestjs/swagger": "^8.1.1",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.3.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-orm": "^0.44.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.0",
    "resend": "^6.0.1",
    "rxjs": "^7.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@jest/globals": "^29.7.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.12",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@workspace/jest-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "drizzle-kit": "^0.31.4",
    "fastify": "^5.4.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
